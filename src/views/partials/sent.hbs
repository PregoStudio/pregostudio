<form action="/clients/add" method="POST" class="form_req">
    <div class="section__form">
        <div class="form-group">
            <div class="mb-3">
                <label class="form-label">Nombre completo:</label>
                <input type="text" class="form-control" name="nombre">
            </div>
            <div class="mb-3">
                <label class="form-label">Correo electrónico:</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label class="form-label">Teléfono:</label>
                <input type="text" name="telefono" class="form-control">
                <div id="emailHelp" class="form-text">Tus datos no serán compartidos con
                    terceros.</div>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea name="descripcion" rows="7" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <select class="form-select" name="producto" aria-label="Default select example">
                    <option selected>¿Desea consultar un servicio particular?</option>
                    <option value="1">Asesoría general en Derecho Penal</option>
                    <option value="2">Delitos contra la Administración Pública</option>
                    <option value="3">Estrategias integrales del proceso penal</option>
                    <option value="4">Recursos de apelación</option>
                    <option value="5">Representación judicial y extrajudicial en el proceso penal</option>
                    <option value="6">Representación voluntaria ante las autoridades</option>
                    <option value="7">Redacción y presentación de denuncias</option>
                    <option value="8">Recursos extraordinarios de casación</option>
                    <option value="9">Representación ante tribunales y altas cortes</option>
                </select>
            </div>
        </div>
    </div>

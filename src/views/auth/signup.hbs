<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 style="color: black;">Formulario de registro</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group m-2">
                            <input type="text" name="fullname" placeholder="Nombre Completo" class="form-control m-2" autofocus>
                        </div>
                        <div class="form-group m-2">
                            <input type="text" name="username" class="form-control m-2" placeholder="Nombre de usuario">
                        </div>
                        <div class="form-group m-2">
                            <input type="password" name="password" class="form-control m-2" placeholder="Password">
                        </div>
                        <div class="form-group m-2">
                            <input type="text" name="phone" placeholder="Teléfono/Celular" class="form-control m-2" autofocus>
                        </div>
                        <div class="form-group m-2">
                            <input type="email" name="email" class="form-control m-2" placeholder="Correo electrónico">
                        </div>
                        <div class="form-group m-2">
                            <button class="btn btn-success btn-block" data-sitekey="reCAPTCHA_site_key"
                                data-callback='onSubmit' data-action='submit'>Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
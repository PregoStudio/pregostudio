<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/usuarios/add" method="POST">
                        <div class="form-group m-4">
                            <label class="form-label">Nombre Completo (*)</label>
                            <input type="text" name="username" class="form-control" placeholder="Juan Carlos" autofocus>
                        </div>
                        <div class="form-group m-4">
                            <label class="form-label">Teléfono/Contacto (*)</label>
                            <input type="tel" name="phone" class="form-control" placeholder="(+57 4) 320 444 44 44">
                        </div>
                        <div class="form-group m-4">
                            <label class="form-label">Correo electrónico (*)</label>
                            <input type="email" name="email" class="form-control" placeholder="juan@info.com">
                        </div>
                        <div class="form-group m-4">
                            <label class="form-label">Descripción del servicio</label>
                            <textarea class="form-control" rows="3" name="description"
                                placeholder="Máx. 500 Caracteres"></textarea>
                        </div>
                        <div class="form-group m-4">
                            <label class="form-label">Al enviar sus datos, está aceptando la <a href="/politica-privacidad">Política de privacidad</a> Teacompaño</label>
                        </div>
                        <div class="form-group m-4">
                            <button class="btn btn-success">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>